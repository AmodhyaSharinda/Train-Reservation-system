    <script>
        // Script to auto-fill complaint type into the description box
        const complaintType = document.getElementById('complaintType');
        const complaintDescription = document.getElementById('complaintDescription');

        complaintType.addEventListener('change', function() {
            complaintDescription.value = `Complaint regarding: ${complaintType.value}\n\n`;
        });
